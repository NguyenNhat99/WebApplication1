@using WebApplication1.Models
@model Order
@{
    ViewData["Title"] = $"Đơn hàng #{Model.OrderId}";
    Layout = "~/Areas/PrivateSite/Views/Shared/_Layout.cshtml";
    var fmt = new System.Globalization.CultureInfo("vi-VN");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card w-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Đơn hàng #@Model.OrderId</h5>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3">
                                <h6>Thông tin đơn</h6>
                                <ul class="list-unstyled mb-0">
                                    <li><strong>Khách hàng:</strong> @Model.User?.FullName (@Model.User?.UserName)</li>
                                    <li><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</li>
                                    <li><strong>Trạng thái:</strong> @Model.Status</li>
                                    <li><strong>Địa chỉ:</strong> @Model.Address</li>
                                    @if (!string.IsNullOrWhiteSpace(Model.Note))
                                    {
                                        <li><strong>Ghi chú:</strong> @Model.Note</li>
                                    }
                                    <li><strong>Tổng tiền:</strong> @string.Format(fmt, "{0:c0}", Model.TotalPrice)</li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded-3">
                                <h6>Sản phẩm</h6>
                                <div class="table-responsive">
                                    <table class="table align-middle">
                                        <thead>
                                            <tr>
                                                <th>Tên món</th>
                                                <th class="text-end">Đơn giá</th>
                                                <th class="text-center">SL</th>
                                                <th class="text-end">Thành tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var d in Model.OrderDetails ?? new List<OrderDetail>())
                                            {
                                                var name = d.Food?.Name ?? ("Món #" + d.FoodId);
                                                var sub = d.Price * d.Quantity;
                                                <tr>
                                                    <td>@name</td>
                                                    <td class="text-end">@string.Format(fmt, "{0:c0}", d.Price)</td>
                                                    <td class="text-center">@d.Quantity</td>
                                                    <td class="text-end">@string.Format(fmt, "{0:c0}", sub)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary" href="@Url.Action("Index","Orders", new { area = "PrivateSite" })">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
